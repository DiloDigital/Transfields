							label(for="correo") Email
							input(type="correo", name="correo", id="correo", placeholder="Tu email")
						.form__group
							label(for="telefono") Telefono
							input(type="text", name="telefono", id="telefono", placeholder="Tu teléfono")
						.form__group
							label(for="mensaje") Mensaje
							textarea(name="mensaje", cols="10", rows="5", id="mensaje", placeholder="Tu Mensaje")
