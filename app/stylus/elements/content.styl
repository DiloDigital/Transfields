//edit()

//Styles

body
	font 16px/26px Helvetica, Helvetica Neue, Arial
	
.wrap
	center(85%)

	
/* ==============
    All: Themes
   ============== */

.header-coantainer,
.main-container,
.contact__form,
.nuestros_servicios
	background blanco
	
article
	background verde
.flota
	background verde_dark
	
.que_hacemos,
.contacto
	background gris_medium

.footer-container
	background negro

/* ==============
    WIDE: Menu
   ============== */

main
	text-align center

header
	.logo
		padding 30px 0
		col(1/3, offset:-1/3)
		img
			width 320px
	nav
		margin-top 30px
		col(1/3)
		ul
			padding 0
			margin 0
			list-style none
			text-align center
			li
				display inline-block
				margin 0px 30px
				a
					display block
					padding 15px
					border-radius 10px
					
					text-decoration none
					font-size 1.5em
					color negro
					
					&:hover
						background verde
						color blanco
						box-shadow 4px 4px 20px 0px rgba(50, 50, 50, 0.4)
						
				


/* ==============
    WIDE: Main
   ============== */

article
	center()
	//border 5px solid #000
	padding 40px 0

.principal__box 
	col(2/3)
	img
		padding-top 40px
		display inline
	
.contact__form
	col(1/3)
	padding 20px 40px
	box-shadow 7px 7px 5px 0px rgba(50, 50, 50, 0.75)
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box
	

.flota
	center()
	box-shadow 4px 4px 20px 0px rgba(50, 50, 50, 0.4)
	border-radius 120px
	h3
		col(1/3)
	
.que_hacemos
	padding 20px 0
	img
		margin 20px 0
	//center()	


.nuestros_servicios
	padding 30px 0
	h2, h3
		color gris_medium
	> p
		width 50%
		margin 0 auto

.servicios_box
	center()
	margin 60px 0
	.servicio
		col(1/3)
		img
			border-radius 50%


.contacto
	padding 30px 0

// footer


footer
	.pie
		col(1/3, offset:1/3)
		padding 10px 0
		a
			text-align center
			color blanco
			text-decoration none
	.social
		col(1/3)
		text-align right
		margin-top 22.5px

