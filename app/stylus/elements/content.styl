//Styles

body
	font 16px/26px Helvetica, Helvetica Neue, Arial
	
.wrap
	center(85%)

	
/* ==============
    All: Themes
   ============== */

.header-coantainer,
.main-container,
.contact__form,
.nuestros_servicios
	background blanco
	
article
	background verde
	
.que_hacemos,
.contacto
	background gris_medium

.footer-container
	background negro

/* ==============
    WIDE: Menu
   ============== */

main
	text-align center

header
	.logo
		padding 30px 0
		col(1/3, offset:-1/3)
		img
			width 320px
	nav
		margin-top 30px
		col(1/3)
		ul
			padding 0
			margin 0
			list-style none
			text-align center
			li
				display inline-block
				margin 0px 30px
				a
					display block
					padding 15px
					border-radius 10px
					
					text-decoration none
					font-size 1.5em
					color negro
					
					&:hover
						background verde
						color blanco
						box-shadow 4px 4px 20px 0px rgba(50, 50, 50, 0.4)
						
					&:visites
						color blanco


