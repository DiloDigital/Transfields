//   Helper classes

.hidden
  display none !important
  visibility hidden

.visuallyhidden
  border 0
  clip rect(0 0 0 0)
  height 1px
  margin -1px
  overflow hidden
  padding 0
  position absolute
  width 1px

.visuallyhidden.focusable:active,
.visuallyhidden.focusable:focus
  clip auto
  height auto
  margin 0
  overflow visible
  position static
  width auto

.invisible
  visibility hidden

.clearfix:before,
.clearfix:after
  content " "
  display table

.clearfix
  *zoom 1
    &:after
      clear both

// responsive

.max-width
    width 100%
    max-width 1400px
    padding 0.68em
    margin-left auto
    margin-right auto
    overflow hidden
    box-sizing border-box

.img-responsive
    width 100%
    max-width 100%
    height auto

.list-none
    list-style-type none

.non-margin
    margin 0
    padding 0

//non responsive
.nr-max-width
  width 1420px
  height auto
  overflow hidden
.wrap
  width 1200px 
  margin 0 auto
  
// color Background

.bg
    &--blanco
        background-color blanco
    &--negro
        background-color negro
    &--gris-medium
        background-color gris_medium
    &--gris-dark
        background-color gris_dark
    &--verde
        background-color verde
    &--verde-dark
        background-color verde_dark
    &--purpura
        background-color purpura

// alineaciones

.text
    &--center
        text-align center
    &--left
        text-align left
    &--right
        text-align right
    &--blanco
        color blanco
    &--purpura
        color purpura
    &--gris-medium
        color gris_medium
    &--gris-dark
        color gris_dark
    &--fono
        font-size 3em
        color purpura
        font-weight bold
        line-height 1em
    &--inline
        display inline
    &--important
        font-size 1.2em
        
        
              
        
      
      
        
